<div class="container mt-4 d-flex justify-content-center ">
  <div class="card-cat">
  <h5>Add a New Category</h5>
  <%= simple_form_for @category do |f| %>
        <div class="form-group">
          <%= f.input :name, label: false, input_html: { class: 'form-control', placeholder: 'The category name..' } %>
        </div>
        <div class="form-group">
          <%= f.input :photo, as: :file, label: 'Photo', input_html: { class: 'form-control-file' } %>
        </div>

        <%= f.submit 'Create Category', class: 'btn btn-warning mt-3' %>
  <% end %>

</div>
</div>
