<div class="container mt-4 d-flex justify-content-center ">
  <div class="card-cat">
  <h5>Add a New recipe</h5>
  <%= simple_form_for [@category, @bookmark] do |f| %>
        <div class="form-group">
          <%= f.association :recipe, label: false, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.input :comment,  input_html: { class: 'form-control-file', placeholder: 'Your comment here...' } %>
        </div>

        <%= f.submit 'Add recipe', class: 'btn btn-info mt-3' %>
  <% end %>

</div>
</div>
